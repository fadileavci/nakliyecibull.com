@using Nakliye.ENTITY
@model List<Nakliyeciler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html class="no-js" lang="zxx">

<body class="loader-active">

    <!--== Choose Car Area Start ==-->
    <section id="choose-car">
        <div class="container">
            <div class="row">
                <!-- Choose Area Content Start -->
                <div class="col-lg-12">
                    <div class="choose-content-wrap">
                        <!-- Choose Area Tab Menu -->
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="/Home/Login/" role="tab" aria-selected="true">Nakliyeciler</a>
                            </li>

                        </ul>
                        <br />
                        <!-- Choose Area Tab Menu -->
                        <!-- Choose Area Tab content -->
                        <div class="tab-content" id="myTabContent">
                            <!-- Popular Cars Tab Start -->
                            <div class="tab-pane fade show active" id="popular_cars" role="tabpanel" aria-labelledby="home-tab">
                                <!-- Popular Cars Content Wrapper Start -->
                                <div class="popular-cars-wrap">

                                    <!-- PopularCars Tab Content Start -->
                                    <div class="row popular-car-gird">
                                        <!-- Single Popular Car Start -->
                                        @foreach (Nakliyeciler item in Model)
                                        {
                                            <div class="col-lg-4 col-md-6 hat sedan">
                                                <div class="single-popular-car">
                                                    <div class="p-car-thumbnails">
                                                        @foreach (Photo photo in item.Photo)
                                                        {
                                                            <a class="car-hover" href="~/assets/img/@photo.Photo1">
                                                                <img src="~/assets/img/@photo.Photo1" />
                                                            </a>
                                                        }
                                                    </div>

                                                    <div class="p-car-content">
                                                        <h3>
                                                            <a href="/Nakliyeci/NakliyeciDetay/@item.NakliyeciID">@item.NakliyeSirketininAdı<br /></a>
                                                            <span class="price"><i class="fa fa-tag"></i> @item.NakliyeciSemt</span>
                                                        </h3>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <!-- PopularCars Tab Content End -->
                                </div>
                                <!-- Popular Cars Content Wrapper End -->
                            </div>
                            <!-- Popular Cars Tab End -->

                        </div>
                        <!-- Choose Area Tab content -->
                    </div>
                </div>
                <!-- Choose Area Content End -->
            </div>
        </div>
    </section>
    <!--== Choose Car Area End ==-->
</body>
</html>